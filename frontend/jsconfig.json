{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "element-plus/global"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext"
    ]
  },
  "exclude": ["node_modules"]
}